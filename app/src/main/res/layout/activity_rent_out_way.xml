<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_titleview"/>
    <include layout="@layout/line_view_horizontal"/>
    <TextView
        style="@style/text_black_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:text="您发布的房屋是？"/>

    <Button
        android:id="@+id/rent_out_way_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_oval_blue_shadow"
        android:textColor="@color/white"
        android:text="新房屋"/>

    <Button
        android:id="@+id/rent_out_way_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_oval_white_shadow"
        android:textColor="@color/colorPrimary"
        android:text="复制已有房屋"/>

</LinearLayout>
