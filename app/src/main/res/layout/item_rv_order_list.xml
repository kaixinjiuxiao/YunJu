<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">
    <TextView
        android:id="@+id/item_order_source"
        style="@style/text_black_style"
        android:text="" />
    <TextView
        android:id="@+id/item_order_status"
        style="@style/text_gray_style"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimary"
        android:text="" />
    <TextView
        android:id="@+id/item_order_date"
        style="@style/text_black_style"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/item_order_source"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="0.00" />
    <TextView
        android:id="@+id/item_order_name"
        style="@style/text_gray_style"
        android:layout_below="@+id/item_order_date"
        android:layout_marginTop="8dp"
        android:text=""
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/item_order_picture"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/item_order_date"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_main" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/item_order_name"
        android:layout_toRightOf="@+id/item_order_picture"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/item_order_title"
            style="@style/text_black_style"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            style="@style/text_gray_style"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:text="基础价"/>
        <TextView
            android:id="@+id/item_order_desrible"
            style="@style/text_gray_style"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/item_order_toComment"
        style="@style/general_button_style"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_order_picture"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text=""/>
</RelativeLayout>
