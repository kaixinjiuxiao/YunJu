<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/unsubscribeRule"
    >

    <include layout="@layout/layout_titleview"/>

    <include layout="@layout/line_view_horizontal"/>

    <TextView
        style="@style/text_black_style"
        android:padding="16dp"
        android:text="宽松的退款规则会让更多的人预定您的房屋"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        >

        <TextView
            style="@style/text_black_style"
            android:paddingLeft="16dp"
            android:text="入住"
            />

        <LinearLayout
            android:id="@+id/linearDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/days"
                style="@style/text_black_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:minWidth="30dp"
                android:text="前1天"
                android:textColor="@color/colorPrimary"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/lan_arrows_bottom"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <TextView
            style="@style/text_black_style"
            android:text="12点前取消订单,房费可全额退还"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        >

        <TextView
            style="@style/text_black_style"
            android:paddingLeft="16dp"
            android:text="之后取消订单,收取未住房费的"
            />

        <LinearLayout
            android:id="@+id/linearFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/free"
                style="@style/text_black_style"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:minWidth="30dp"
                android:gravity="center"
                android:text="50%"
                android:textColor="@color/colorPrimary"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/lan_arrows_bottom"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        style="@style/text_black_style"
        android:paddingLeft="16dp"
        android:text="作为违约金支付给房东。(包括未入住和提前离店)"
        />
</LinearLayout>