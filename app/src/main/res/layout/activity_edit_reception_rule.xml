<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/layout_titleview"/>
    <include layout="@layout/line_view_horizontal"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                style="@style/text_black_style"
                android:text="您接待的以下房客?"
                android:layout_margin="16dp"
                />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <LinearLayout
                   android:id="@+id/reception_rule_child"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="20dp"
                   android:padding="10dp"
                   >
                   <TextView
                      style="@style/text_gray_style"
                       android:text="儿童"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="10dp"
                      android:gravity="center"
                      android:textColor="@color/colorPrimary"
                       />
                   <ImageView
                       android:id="@+id/imgChild"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginRight="10dp"
                        android:src="@drawable/reception_rule_selector"
                       android:layout_marginLeft="5dp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/reception_rule_old"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="20dp"
                   android:padding="10dp"
                   >
                   <TextView
                       style="@style/text_gray_style"
                       android:text="老人"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="10dp"
                       android:gravity="center"
                       android:textColor="@color/colorPrimary"
                       />
                   <ImageView
                       android:id="@+id/imgOld"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/reception_rule_selector"
                       android:layout_marginLeft="5dp"
                       />
               </LinearLayout>
           </LinearLayout>
            <TextView
                style="@style/text_black_style"
                android:text="您可接待的性别?"
                android:layout_margin="16dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/reception_rule_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    >
                    <TextView
                        style="@style/text_gray_style"
                        android:text="男性"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        />
                    <ImageView
                        android:id="@+id/imgMan"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/reception_rule_selector"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/reception_rule_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    >
                    <TextView
                        style="@style/text_gray_style"
                        android:text="女性"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        />
                    <ImageView
                        android:id="@+id/imgWoman"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/reception_rule_selector"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                style="@style/text_black_style"
                android:text="对可要求"
                android:layout_margin="16dp"
                />
            <RelativeLayout
                android:id="@+id/reception_rule_smoking"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    style="@style/text_gray_style"
                    android:text="是否允许房客吸烟?"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <ImageView
                    android:id="@+id/imgSmoking"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/reception_rule_selector"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                />
            <RelativeLayout
                android:id="@+id/reception_rule_pet"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    style="@style/text_gray_style"
                    android:text="是否允许房客带宠物?"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <ImageView
                    android:id="@+id/imgPet"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/reception_rule_selector"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                />
            <RelativeLayout
                android:id="@+id/reception_rule_cook"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    style="@style/text_gray_style"
                    android:text="是否允许房客做饭?"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <ImageView
                    android:id="@+id/imgCook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/reception_rule_selector"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                />
            <RelativeLayout
                android:id="@+id/reception_rule_party"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    style="@style/text_gray_style"
                    android:text="是否允许房客聚会?"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <ImageView
                    android:id="@+id/imgParty"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/reception_rule_selector"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                />
            <RelativeLayout
                android:id="@+id/reception_rule_photo"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    style="@style/text_gray_style"
                    android:text="是否允许房客商业拍照?"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <ImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/reception_rule_selector"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                />
            <RelativeLayout
                android:id="@+id/reception_rule_addBed"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    style="@style/text_gray_style"
                    android:text="是否允许房客加床?"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <ImageView
                    android:id="@+id/imgBed"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/reception_rule_selector"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                />
            <RelativeLayout
                android:id="@+id/reception_rule_addMan"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    style="@style/text_gray_style"
                    android:text="额外家人?"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
                <ImageView
                    android:id="@+id/imgAddMan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/reception_rule_selector"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>